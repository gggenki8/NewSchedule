<div class = "index-header">
    <h3 class = "index-top">予定一覧</h3>
<p class = "new_button">
    <%= link_to "⊕ 新規追加", :new_task %> 
    <p>
</div>

<div class = "task-list">
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>更新日時</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <td><%= task.id %></td>
                    <td><%= task.title %></td>
                    <td><%= task.start_day.strftime("%Y/%m/%d") if task.start_day.present? %></td>
                    <td><%= task.end_day.strftime("%Y/%m/%d") if task.end_day.present?%></td>
                    <td><%= task.all_day ? "⚪︎" : ""%></td>
                    <td><%= task.updated_at.to_s(:datetime_jp) %></td>
                    <td><%= link_to "詳細", task %></td>
                    <td><%= link_to "編集", [:edit, task]%></td>
                    <td>
                        <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？"}%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class = "total_count">
    <p>予定合計 <%= @tasks.count %>件</p>
    <p>本日の日付 <%= Time.current.strftime("%Y/%m/%d") %></p>
</div>